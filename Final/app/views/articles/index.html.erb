<% page_header "Daydream" %>

    <% @articles.each do |article| %>
       <div class="well well-lg"> 
       <p><%= article.title %></p> 
       <p><%= article.description %></p>
	<p><%= link_to image_tag(root_url + "/images/" + article.filename), article %>
        <p><%= article.views %> <span class="glyphicon glyphicon-barcode"></span>
        <%= article.likes %> <span class="glyphicon glyphicon-thumbs-up"></span></p>

       <p> <%= link_to 'Delete Article', article, method: :delete, data: { confirm: 'Are you sure?' } %></p>
       </div>
    <% end %>

<br>

<%= link_to 'New Article', new_article_path %>
