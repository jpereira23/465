<h1><%= @topic.title %>'s Comments </h1> 

<table>
  <thead> 
    <tr> 
      <th>Description</th> 
    </tr> 
   </thead> 
   
  <tbody> 
    <% @comments.each do |comment| %> 
    <tr>
    <td><%= comment.description %></td> 
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td> 
    <td><%= link_to 'Destroy', comment, method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</tbody> 
</table> 

<br> 

<%= link_to 'New Comment', new_topic_comment_path %> |
<%= link_to "Back to #{@topic.title}'s topic", topic_path(@topic) %> 

