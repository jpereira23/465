<%= form_for(@topic) do |f| %> 
  <% if @topic.errors.any? %> 
    <div id="error_explanation"> 
      <h2> <%= pluralize(@topic.errors.count, "error") %>prohibited this professor from being saved:</h2> 
      
      <ul> 
      <% @topic.errors.full_messages.each do |message| %> 
        <li><%= message %></li>
      <% end %> 
      </ul> 
     </div> 
    <% end %>
  <div class="field"> 
    <%= f.label :title %> 
    <%= f.text_field :title %> 
  </div>
    
  <div class="field"> 
    <%= f.label :description %> 
    <%= f.text_field :description %> 
  </div>
    
  <div class="field"> 
    <%= f.hidden_field :hour, :value => @number.to_i %>
  </div>
       
  <div class="field"> 
    <%= f.hidden_field :view, :value => 0 %>
  </div> 
  <div class="action"> 
    <%= f.submit %> 
  </div> 
<% end %>
