<p id="notice"><%= notice %></p>
<% if user_signed_in? %> 
<%= image_tag root_url + "/images/" + @image.filename, size:"100x100", alt:@image.filename %> 

<body> 
  <table> 
  <thead> 
    <th>User</th> 
    <th colspan=2>Delete</th> 
  </thead> 
  <tbody> 
    <% @image_users.each do |image_user| %> 
    <% if image_user.image_id == @image.id %>
      <% @users.each do |user| %> 
        <% if user.id == image_user.user_id %>
          <tr> 
            <td><%= user.name %></td> 
            <td><%= link_to "Delete User", image_user, method: :delete, data: { confirm: 'Are you sure?' }  %></td> 
    </tr> 
    <% end %> 
    <% end %>
    <% end %> 
    <% end %>  
  </tbody> 
  </table> 
</body>    

<% end %> 
