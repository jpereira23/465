<p id="notice"><%= notice %></p>

<% if user_signed_in? %> 

<h1>Listing Images</h1>
<table>
  <thead>
    <tr>
      <th>Images</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @images.each do |image| %>
    <% if image.user_id == current_user.id %> 
      <tr>
        <td><%= image_tag root_url + "/images/" + image.filename, size: "100x100", alt:image.filename %></td>
        <td><%= image.user_id %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
<%= link_to 'Wanna share an image?', share_path %>  
<% else %> 

<h5>Log in to see your images</h5>
<% end %> 

